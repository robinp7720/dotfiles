;; Agenda widget showing upcoming events (plain formatted text for eww 0.6).

(defwidget agenda []
  (box :class "agenda" :orientation "vertical" :space-evenly "false"
    (label :class "agenda-title" :text "Agenda" :halign "start")
    (box :class "agenda-list" :orientation "vertical" :space-evenly "false"
      (label :class "agenda-summary" :text agenda_list :halign "start" :wrap true :limit-width 80))))
